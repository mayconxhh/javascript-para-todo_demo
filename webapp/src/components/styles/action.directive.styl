@import('~nib')

.mdx-fab-action
	md-icon
		transition transform .25s ease
		&.cross
			transform rotate(135deg)
	/*@media screen and (min-width 1200px)
		position relative*/

.action__wrapper
	bottom 6px
	height 56px
	left 0
	position absolute
	width 56px
	.md-fab
		transform scale(0)
		position: absolute;
		transition transform .25s ease-in-out
		left 0
		&.show
			transform scale(1)
	@media screen and (min-width 1200px)
		bottom 0
		position relative
		.md-fab.md-fab-s
			margin-top: 8px;
			position: static;

.md-fab.md-fab-s
	transition transform .25s ease-in-out, position .25s ease-in-out, margin-top .25s ease-in-out
	transform scale(0) !important
